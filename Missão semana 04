var

 Celsius, Fahrenheit, valorEmReais, cotacaoDolar,conversao :real
 OpcaoMenu, Opcaotemperatura, OpcaoCotacao, Sair: inteiro

inicio

  //Conversão detemperatura
  enquanto Opcaomenu <> 3 faca
  escreval("Escolher a opção para conversão")
  escreval(" 1- Para Conversor Temperatura")
  escreval(" 2- Para Converter Moeda")
  escreval(" 3- Para Sair")
  leia(OpcaoMenu)
  limpatela
  se OpcaoMenu = 1 entao
  escreval("Escola Conversão")
  escreval(" 1- Celsius para Fahrenheit ")
  escreval(" 2- Fahrenheit para Celsius")
  leia(OpcaoTemperatura)
  limpatela
  se OpcaoTemperatura = 1 entao
  escreval("Digite a Temperatura Cº")
  leia (Celsius)
  Fahrenheit <- (9 * Celsius + 160)/5
  escreval("A temperatura em graus Fahrenheit é:",Fahrenheit)
  senao
  se OpcaoTemperatura = 2 entao
  escreval("Digite a Temperatura Fº")
  leia (Fahrenheit)
  Celsius <-(Fahrenheit-32)/1,8
  escreval("A temperatura em Celsius é:",Celsius:1:1, "º")
  Fimse
  Fimse
  senao

  //conversão do real para dolar
  se OpcaoMenu = 2 entao
  escreval("Escola a Conversão")
  escreval(" 1-Real para Dólar")
  escreval(" 2-Dólar para Real")
  leia(OpcaoMenu)
  limpatela
  se opcaoMenu= 1 Entao
  escreval("Digite Quantos Reais você deseja converter?")
  leia (valorEmReais)
  escreval("Digite cotação do Dólar?")
  Leia (cotacaoDolar)
  conversao<-valorEmReais/Cotacaodolar
  escreval("valorEmReais:R$ ",valorEmReais)
  Escreval("Quantidade de dolares convertida foi de: ",Conversao)
  Fimse
  Fimse
  Fimse
  
  //Conversão de Dolar para real
  se opcaoMenu =2 entao
  escreval("Digite Quantos Dolar você deseja converter?")
  Leia (CotacaoDolar)
  Escreval ("informe o valor da cotacao:")
  Leia (conversao)
  CotacaoDolar <- CotacaoDolar * conversao
  Escreval ("Ovalor em Real e:" ,CotacaoDolar)
  Fimse
  Fimenquanto
  Fimalgoritmo
